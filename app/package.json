{
  "name": "node-boilerplate",
  "license": "MIT",
  "author": "Pawe≈Ç Farys <pmg.farys@gmail.com>",
  "repository": "https://github.com/vertisan/node.js-boilerplate",
  "version": "1.0.0",
  "main": "./src/index.ts",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "lint": "eslint ./src --ext .ts --ext .tsx",
    "lint:fix": "eslint ./src --ext .ts --ext .tsx --fix",
    "prettier": "prettier --check \"src/**/*.ts\"",
    "prettier:fix": "prettier --write \"src/**/*.ts\"",
    "start": "node -r dotenv/config -r ts-node/register -r tsconfig-paths/register ./src/index.ts",
    "watch": "ts-node-dev --poll --respawn -r dotenv/config -r tsconfig-paths/register ./src/index.ts"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.0"
  },
  "devDependencies": {
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "source-map-support": "^0.5.19",
    "ts-node-dev": "^1.1.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "eslint --max-warnings=0"
    ],
    "**/*.{{j,t}s,json,yml,md}": [
      "prettier --write"
    ]
  }
}

{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "experimentalDecorators": true,
    "paths": {
      "*": ["./node_modules/*"],
      "@app/*": ["./src/*"],
      "@test/*": ["./test/*"]
    },
    "typeRoots": ["./@types", "./node_modules/@types"]
  },
  "include": ["./src/**/*", "./@types/**/*", "./test/**/*"]
}
